{
  "family": "anomaly-detection-service",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "1024",
  "memory": "2048",
  "executionRoleArn": "arn:aws:iam::574778231660:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::574778231660:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "anomaly-detection",
      "image": "574778231660.dkr.ecr.ap-southeast-1.amazonaws.com/anomaly-detection-service:latest",
      "portMappings": [
        {
          "containerPort": 8000,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "environment": [
        {
          "name": "VALKEY_HOST",
          "value": "valkey-store-dev-zizz73.serverless.apse1.cache.amazonaws.com"
        },
        {
          "name": "VALKEY_PORT",
          "value": "6379"
        },
        {
          "name": "VALKEY_USERNAME",
          "value": "chunking-lambda-valkey-read"
        },
        {
          "name": "VALKEY_PASSWORD",
          "value": "ICOn1qVwMVA9GIb7"
        },
        {
          "name": "ENVIRONMENT",
          "value": "development"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/anomaly-detection-service",
          "awslogs-region": "ap-southeast-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -f http://localhost:8000/health || exit 1"
        ],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ]
}
